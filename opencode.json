{
  "$schema": "https://opencode.ai/config.json",
  "theme": "opencode",
  "layout": "stretch",
  "small_model": "anthropic/claude-3-haiku-20240307",
  "model": "anthropic/claude-opus-4-5",
  "tui": { "scroll_speed": 4, "scroll_acceleration": { "enabled": true } },
  "lsp": {
    "typescript": { "disabled": true },
    "eslint": { "disabled": true },
    "gopls": { "disabled": true },
    "ruby-lsp": { "disabled": true },
    "pyright": { "disabled": true },
    "elixir-ls": { "disabled": true },
    "zls": { "disabled": true },
    "csharp": { "disabled": true },
    "vue": { "disabled": true },
    "rust": { "disabled": true },
    "clangd": { "disabled": true },
    "svelte": { "disabled": true }
  },

  "provider": {
    "opencode": {
      "models": {
        "glm-4.6": {
          "options": {
            "reasoning": {
              "enabled": true
            }
          }
        }
      }
    },
    "anthropic": {
      "name": "Anthropic",
      "models": {
        "claude-sonnet-4-5": {
          "options": {
            "thinking": {
              "type": "enabled",
              "budgetTokens": 16000
            }
          }
        },
        "claude-opus-4-5": {
          "options": {
            "thinking": {
              "type": "enabled",
              "budgetTokens": 8000
            }
          }
        },
        "claude-opus-4-1": {
          "options": {
            "thinking": {
              "type": "enabled",
              "budgetTokens": 16000
            }
          }
        },
        "claude-opus-4-0": {
          "options": {
            "thinking": {
              "type": "enabled",
              "budgetTokens": 16000
              // "budgetTokens": 16000
            }
          }
        }
      }
    }
  },
  // "plugin": ["opencode-gemini-auth"],
  "mcp": {
    // "kapture": {
    //   "type": "local",
    //   "command": ["bunx", "kapture-mcp@latest", "bridge"]
    // },
    // "playwriter": {
    //   "type": "local",
    //   "command": ["bunx", "playwriter@latest"]
    // }
    "playwriter": {
      "type": "local",
      "command": [
        "tsx",
        "/Users/morse/Documents/GitHub/playwriter/playwriter/src/mcp.ts"
      ]
    }
    // "browsermcp": {
    //   "type": "local",
    //   "command": ["bunx", "@browsermcp/mcp@latest"]
    // },
  },

  "formatter": {
    "prettier": { "disabled": true },
    "biome": { "disabled": true },
    "gofmt": { "disabled": true },
    "mix": { "disabled": true },
    "zig": { "disabled": true },
    "clang-format": { "disabled": true },
    "ktlint": { "disabled": true },
    "ruff": { "disabled": true },
    "rubocop": { "disabled": true },
    "standardrb": { "disabled": true },
    "htmlbeautifier": { "disabled": true }
  },

  "permission": {
    "edit": "allow",
    "bash": "allow",
    "webfetch": "allow"
    // "doom_loop": "allow",
    // "external_directory": "allow"
  },

  "autoupdate": true,
  "experimental": {
    "disable_paste_summary": true
  },
  "agent": {
    "plan": {
      "mode": "primary",
      "model": "openai/gpt-5-codex",
      "prompt": "{file:./prompts/PLAN.md}",

      "tools": {
        "write": false,
        "edit": false,
        "bash": true
      }
    }
  }
}
