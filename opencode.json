{
  "$schema": "https://opencode.ai/config.json",
  "theme": "opencode",
  // "layout": "stretch",
  "small_model": "anthropic/claude-haiku-4-5",
  "model": "anthropic/claude-opus-4-5",
  "tui": { "scroll_speed": 6, "scroll_acceleration": { "enabled": true } },
  "lsp": false,

  "provider": {
    "opencode": {
      "models": {
        "glm-4.6": {
          "options": {
            "reasoning": {
              "enabled": true
            }
          }
        }
      }
    },
    "anthropic": {
      "name": "Anthropic",
      "models": {
        "claude-sonnet-4-5": {
          // "options": {
          //   "thinking": {
          //     "type": "enabled",
          //     "budgetTokens": 16000
          //   }
          // }
        },
        "claude-opus-4-5": {
          "options": {
            "thinking": {
              "type": "enabled",
              "budgetTokens": 16000
            }
          }
        },
        "claude-opus-4-1": {
          "options": {
            "thinking": {
              "type": "enabled",
              "budgetTokens": 16000
            }
          }
        },
        "claude-opus-4-0": {
          "options": {
            "thinking": {
              "type": "enabled",
              "budgetTokens": 16000
              // "budgetTokens": 16000
            }
          }
        }
      }
    }
  },
  "plugin": [
    "/Users/morse/kimaki/mappamundi/opencode/src/index.ts",
    "opencode-google-antigravity-auth"
  ],
  "mcp": {
    // "playwriter-npm-snapshot": {
    //   "type": "local",
    //   "enabled": true,
    //   "command": ["npx", "playwriter@latest"]
    // },

    "playwriter": {
      "type": "local",
      "command": [
        "tsx",
        "/Users/morse/Documents/GitHub/playwriter/playwriter/src/cli.ts"
      ],
      "environment": {
        "PLAYWRITER_LOG_FILE_PATH": "/Users/morse/.config/opencode/playwriter.log",
        "PLAYWRITER_NODE_ENV": "development",
        "PLAYWRITER_AUTO_ENABLE": "1"
      }
    }
  },

  "formatter": false,

  "permission": {
    "edit": "allow",
    "bash": "allow",
    "webfetch": "allow"
    // "doom_loop": "allow",
    // "external_directory": "allow"
  },

  "autoupdate": true,
  "experimental": {
    "disable_paste_summary": true
  },
  "agent": {
    "plan": {
      "mode": "primary",
      "model": "openai/gpt-5-codex",
      "prompt": "{file:./prompts/PLAN.md}",

      "permission": {
        "edit": "deny",
        "bash": "allow"
      }
    }
  }
}
